@model UpdateTaskDto

@{
    ViewData["Title"] = "Edit Task";
}

<div class="card">
    <div class="card-header">
        <h4>Edit Task</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" id="editTaskForm">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />

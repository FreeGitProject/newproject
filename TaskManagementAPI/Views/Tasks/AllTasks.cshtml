@using TaskManagementAPI.DTOs.Response
@model List<TaskResponseDto>

@{
    ViewData["Title"] = "All Tasks";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">All Tasks</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Assigned To</th>
                <th>Description</th>
                <th>Due Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.UserName</td>
                    <td>@task.Description</td>
                    <td>@(task.DueDate?.ToString("MM/dd/yyyy") ?? "No due date")</td>
                    <td>
                        <span class="badge @(task.IsCompleted ? "bg-success" : "bg-warning")">
                            @(task.IsCompleted ? "Completed" : "Pending")
                        </span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-sm btn-outline-info">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>